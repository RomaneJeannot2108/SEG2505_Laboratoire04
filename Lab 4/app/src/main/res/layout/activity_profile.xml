<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="75dp"
        android:text="Select a new Avatar"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/gridRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SetTeamIcon"
            android:src="@drawable/ic_logo_00"
            app:srcCompat="@drawable/ic_logo_00"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SetTeamIcon"
            android:src="@drawable/ic_logo_01"
            app:srcCompat="@drawable/ic_logo_01"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SetTeamIcon"
            android:src="@drawable/ic_logo_02"
            app:srcCompat="@drawable/ic_logo_02"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="275dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SetTeamIcon"
            android:src="@drawable/ic_logo_03"
            app:srcCompat="@drawable/ic_logo_03"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/logo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SetTeamIcon"
            android:src="@drawable/ic_logo_04"
            app:srcCompat="@drawable/ic_logo_04"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/logo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="SetTeamIcon"
            android:src="@drawable/ic_logo_05"
            app:srcCompat="@drawable/ic_logo_05"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="500dp"
        android:text="LOAD FROM PHONE" />
</RelativeLayout>